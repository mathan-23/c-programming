Positive or Negative
#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
int a;
    scanf("%d",&a);
    if(a>0)
    {
        printf("The Given Number %d is Positive.",a);
    }
    else if(a<0)
    {
        printf("The Given Number %d is Negative.",a);
    }
    else if(a==0)
    {
        printf("The Given Number %d is Zero.",a);
    }
    else
    {
        printf("\n");
    }
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
