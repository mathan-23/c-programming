Numbers Greater Than Target Value
#include <stdio.h>
#include <stdlib.h>

// Comparison function for qsort
int compare(const void *a, const void *b) {
    return (*(int *)a - *(int *)b);
}

int main() {
    int n, target;
    scanf("%d", &n);

    int arr[n], filtered[n], count = 0, sum = 0;
    double average;

    // Read array elements
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    scanf("%d", &target);

    // Filter and sum values greater than target
    for (int i = 0; i < n; i++) {
        if (arr[i] > target) {
            filtered[count++] = arr[i];
            sum += arr[i];
        }
    }

    // Sort filtered values to ensure correct print order
    qsort(filtered, count, sizeof(int), compare);

    // Print output
    printf("The Target values are");
    for (int i = 0; i < count; i++) {
        printf(" %d", filtered[i]);
    }
    printf("\nsum of value is %d\n", sum);

    if (count > 0) {
        average = (double)sum / count;
        printf("Average of the value is %.1lf\n", average);
    } else {
        printf("Average of the value is 0.0\n");
    }

    return 0;
}
