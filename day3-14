Maximum Product Of Two Elements In An Array 1

#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    int arr[n];
    int max1 = 0, max2 = 0;

    // Read input and find two largest numbers
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);

        if (arr[i] > max1) {
            max2 = max1;
            max1 = arr[i];
        } else if (arr[i] > max2) {
            max2 = arr[i];
        }
    }

    int result = (max1 - 1) * (max2 - 1);
    printf("Maximum product of two elements in an array is %d\n", result);

    return 0;
}
