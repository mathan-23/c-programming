#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);
    int matrix[n][n];

    int value = 1;
    int top = 0, bottom = n - 1;
    int left = 0, right = n - 1;

    while (top <= bottom && left <= right) {
        // Fill top row
        for (int i = left; i <= right; i++)
            matrix[top][i] = value++;
        top++;

        // Fill right column
        for (int i = top; i <= bottom; i++)
            matrix[i][right] = value++;
        right--;

        // Fill bottom row
        for (int i = right; i >= left; i--)
            matrix[bottom][i] = value++;
        bottom--;

        // Fill left column
        for (int i = bottom; i >= top; i--)
            matrix[i][left] = value++;
        left++;
    }

    // Print the matrix
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++)
            printf("%d ", matrix[i][j]);
        printf("\n");
    }

    return 0;
}
