Second Array Max And Min
#include <stdio.h>
#include <stdlib.h>

// Comparison function for qsort in ascending order
int compare(const void *a, const void *b) {
    return (*(int*)a - *(int*)b);
}

int main() {
    int n;
    scanf("%d", &n);

    int arr[n], even[n], odd[n];
    int evenCount = 0, oddCount = 0;

    // Input array elements and split into even and odd positions
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
        if (i % 2 == 0) {
            even[evenCount++] = arr[i];  // even position
        } else {
            odd[oddCount++] = arr[i];    // odd position
        }
    }

    // Sort both arrays
    qsort(even, evenCount, sizeof(int), compare);
    qsort(odd, oddCount, sizeof(int), compare);

    // Get second largest from even positions
    int secondLargestEven = (evenCount >= 2) ? even[evenCount - 2] : even[0];
    // Get second smallest from odd positions
    int secondSmallestOdd = (oddCount >= 2) ? odd[1] : odd[0];

    int sum = secondLargestEven + secondSmallestOdd;

    printf("Sum=%d\n", sum);

    return 0;
}
